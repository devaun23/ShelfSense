# ShelfSense Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# API Configuration
# For local development
NEXT_PUBLIC_API_URL=http://localhost:8000

# For production (uncomment and set your production API URL)
# NEXT_PUBLIC_API_URL=https://api.shelfsense.com

# Clerk Authentication
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY
CLERK_SECRET_KEY=sk_test_YOUR_SECRET_KEY

# Clerk routes
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Stripe Payment Configuration
# Get your publishable key from https://dashboard.stripe.com/apikeys
# Switch from pk_test_ to pk_live_ for production!
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY

# Sentry Error Monitoring (Recommended for production)
# Get your DSN from https://sentry.io → Project Settings → Client Keys
# Create a Next.js project in Sentry for the correct DSN format
NEXT_PUBLIC_SENTRY_DSN=https://YOUR_KEY@YOUR_ORG.ingest.sentry.io/YOUR_PROJECT_ID
