# ShelfSense Backend Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
# For local development (SQLite):
DATABASE_URL=sqlite:///./shelfsense.db

# For production (PostgreSQL on Railway):
# DATABASE_URL=postgresql://user:password@host:port/database

# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Clerk Webhook Secret
# Get this from Clerk Dashboard > Webhooks
CLERK_WEBHOOK_SECRET=whsec_...

# CORS Configuration
# Frontend URL for CORS (production)
FRONTEND_URL=https://shelfsense99.netlify.app

# Optional: Rate Limiting Configuration
RATE_LIMIT_AI_QUESTIONS_PER_HOUR=10
RATE_LIMIT_API_REQUESTS_PER_MINUTE=100

# Optional: Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
SLOW_REQUEST_THRESHOLD_SECONDS=3.0
